    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #00203f, #003c58);
            font-family: "Share Tech Mono", monospace;
            overflow-x: hidden;
            
        }

        body::-webkit-scrollbar {
            display: none; 
        }

        header {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            position: sticky;
            top: 0;
            z-index: 1;
            backdrop-filter: blur(10px);
        }

        nav {
            display: flex;
            gap: 20px;
        }

        a {
            color: #f5f3ef;
            text-decoration: none;
            transition: color 0.3s;
        
        }

        a:hover {
            color: #40c9c9;
        }

        .logo span {
            color: #ffb400;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-shadow: 0 0 6px #40c9c9;
        }

        h1 {
            text-align: center;
            color: #ffb400;
            font-size: 2.5rem;
            margin: 40px 0;
            padding-top: 28px;
        }

        .timeline {
            position: relative;
            max-width: 1200px;
            margin: 100px auto;
        }

        .container {
            padding: 10px 50px;
            position: relative;
            width: 50%;
            animation: movedown 1s linear forwards;
            opacity: 0;
        }

        @keyframes movedown {
            0% {
                opacity: 1;
                transform: translateY(-30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0px);
            }
        }

        .container:nth-child(1) {
            animation-delay: 0s;
        }

        .container:nth-child(2) {
            animation-delay: 1s;
        }

        .container:nth-child(3) {
            animation-delay: 2s;
        }

        .container:nth-child(4) {
            animation-delay: 3s;
        }

        .container:nth-child(5) {
            animation-delay: 4s;
        }

        .container:nth-child(6) {
            animation-delay: 5s;
        }

        .container:nth-child(7) {
            animation-delay: 6s;
        }

        .container:nth-child(8) {
            animation-delay: 6s;
        }

        .text-box {
            padding: 20px 30px;
            background: #F4F6FF;
            position: relative;
            border-radius: 6px;
            font-size: 15px;
        }

        .left-container {
            left: 0;
        }

        .right-container {
            left: 50%;
        }

        .container img {
            position: absolute;
            width: 40px;
            border-radius: 50%;
            right: -20px;
            top: 32px;
            z-index: 10;
        }

        .right-container img {
            left: -20px;
        }

        .timeline::after {
            content: '';
            position: absolute;
            width: 6px;
            height: 100%;
            background: #ffb400;
            top: 0;
            left: 50%;
            margin-left: -3px;
            z-index: -1;
            animation: moveline 6s linear forwards;
            border-radius: 20px;
        }

        @keyframes moveline {
            0% {
                height: 0;
            }
            100% {
                height: 100%;
            }
        }

        .text-box h2 {
            background: linear-gradient(135deg, #00203f, #003c58);
            color: #ff9900;
            font-weight: 600;
            padding: 8px;
            border-radius: 10px;
        }

        .text-box small {
            display: inline-block;
            margin-bottom: 15px;
        }

        .left-container-arrow,
        .right-container-arrow {
            height: 0;
            width: 0;
            position: absolute;
            top: 28px;
            z-index: -1;
            border-top: 15px solid transparent;
            border-bottom: 15px solid transparent;
        }

        .left-container-arrow {
            border-left: 15px solid #F4F6FF;
            right: -15px;
        }

        .right-container-arrow {
            border-right: 15px solid #F4F6FF;
            left: -15px;
        }

        @media screen and (max-width: 600px) {
            .timeline {
                margin: 50px auto;
            }

            .timeline::after {
                left: 31px;
            }

            .container {
                width: 100%;
                padding-left: 80px;
                padding-right: 25px;
                text-align: center;
            }

            .text-box {
                font-size: 13px;
            }

            .text-box small {
                margin-bottom: 10px;
            }

            .right-container {
                left: 0;
            }

            .left-container img,
            .right-container img {
                left: 10px;
            }

            .left-container-arrow,
            .right-container-arrow {
                border-right: 15px solid #F4F6FF;
                border-left: 0;
                left: -15px;
            }
        }
        footer {
        text-align: center;
        padding: 10px;
        color: antiquewhite;
        background: rgba(255, 255, 255, 0.05);
        margin-top: auto;
        }
