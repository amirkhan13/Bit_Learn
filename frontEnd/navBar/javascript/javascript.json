    "4. Control Structures": {
      "ifElse": {
        "syntax": "if (condition) { ... } else { ... }",
        "example": "if (age > 18) { console.log('You are an adult.'); }"
      },
      "switchCase": {
        "syntax": "switch (value) { case 1: ...; break; default: ... }",
        "example": "switch (day) { case 1: console.log('Monday'); break; }"
      },
      "loops": {
        "for": "for (let i = 0; i < 5; i++) { console.log(i); }",
